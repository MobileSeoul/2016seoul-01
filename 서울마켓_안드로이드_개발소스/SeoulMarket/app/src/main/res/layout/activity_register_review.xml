<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.project.seoulmarket.detail.review.RegisterReviewActivity"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recruit_content_background"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/marketName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mainBlack"
                    android:textSize="16sp"
                    app:font="Bold"
                    android:text="프리마켓"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/mainPupple"
                    app:font="Bold"
                    android:textSize="14sp"
                    android:text="후기 작성란"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:id="@+id/contentArea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/content_background">

                    <EditText
                        android:id="@+id/reviewEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:maxLength="200"
                        android:padding="10dp"
                        android:hint="100자 이내"
                        android:background="@null"
                        android:textColor="#000000"
                        android:textSize="14sp"/>
                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:weightSum="10">

                <TextView
                    android:id="@+id/imgName"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="20dp"
                    app:font="Custom1"
                    android:textColor="@color/mainGray"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text=""/>

                <Button
                    android:id="@+id/addImgBtn"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    app:font="Bold"
                    android:textColor="#ffffff"
                    android:background="@drawable/dialog_location_background"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="사진 첨부"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/registerReviewBtn"
                    android:layout_width="110dp"
                    android:layout_height="38dp"
                    android:textSize="15sp"
                    app:font="Bold"
                    android:textColor="#ffffff"
                    android:background="@drawable/dialog_location_background"
                    android:text="등록"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
