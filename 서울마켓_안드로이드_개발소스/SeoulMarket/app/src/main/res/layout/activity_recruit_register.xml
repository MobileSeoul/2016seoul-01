<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".recruit.register.RecruitRegisterActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/recruit_content_background"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="10">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="@color/mainPupple"
                android:textSize="16sp"
                android:gravity="right"
                android:layout_marginRight="10dp"
                app:font="Bold"
                android:text="제목"/>

            <EditText
                android:id="@+id/inputTitleEdit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/content_background"
                android:singleLine="true"
                android:maxLength="15"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="@color/mainPupple"
                android:textSize="16sp"
                android:gravity="right"
                android:layout_marginRight="10dp"
                app:font="Bold"
                android:text="내용"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/inputContentArea"
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:background="@drawable/content_background"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp">


            <EditText
                android:id="@+id/inputContentEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:hint="500자 이내"
                android:textSize="14sp"
                android:background="@null"
                android:maxLength="500"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >

            <TextView
                android:id="@+id/addImageName"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:font="Custom1"
                android:textColor="@color/mainGray"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:text=""/>

            <Button
                android:id="@+id/getImageBtn"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                app:font="Bold"
                android:textColor="#ffffff"
                android:background="@drawable/dialog_location_background"
                android:text="사진 첨부"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/completeRecruit"
                android:layout_width="110dp"
                android:layout_height="38dp"
                android:textSize="15sp"
                app:font="Bold"
                android:textColor="#ffffff"
                android:background="@drawable/dialog_location_background"
                android:text="등록"/>
        </LinearLayout>

    </LinearLayout>




</LinearLayout>
