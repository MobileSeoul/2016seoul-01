<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/locaionView"
    android:background="#80000000"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/ic_window1"
        android:layout_marginTop="110dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="위치검색"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="23sp"
                    android:textColor="#927DFF"
                    app:font="Bold"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="263dp"
                    android:layout_height="260dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:weightSum="2">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#d9d9d9"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#d9d9d9"
                            />

                        <TextView
                            android:id="@+id/item1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="강남"
                            android:textSize="22dp"
                            android:textColor="@color/mainPupple"
                            app:font="Normal"
                            android:gravity="center"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#d9d9d9"
                            />

                        <TextView
                            android:id="@+id/item2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="광진"
                            android:textSize="22dp"
                            android:textColor="@color/mainPupple"
                            app:font="Normal"
                            android:gravity="center"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#d9d9d9"
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#d9d9d9"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center">
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#d9d9d9"
                            />
                        <TextView
                            android:id="@+id/item3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="송파"
                            android:textSize="22dp"
                            android:textColor="@color/mainPupple"
                            app:font="Normal"
                            android:gravity="center"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#d9d9d9"
                            />
                        <TextView
                            android:id="@+id/item4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="노원"
                            android:textSize="22dp"
                            android:textColor="@color/mainPupple"
                            app:font="Normal"
                            android:gravity="center"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#d9d9d9"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#d9d9d9"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center">
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#d9d9d9"
                            />
                        <TextView
                            android:id="@+id/item5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="강서"
                            android:textSize="22dp"
                            android:textColor="@color/mainPupple"
                            android:gravity="center"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#d9d9d9"
                            />
                        <TextView
                            android:id="@+id/item6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="종로"
                            android:textSize="22dp"
                            android:textColor="@color/mainPupple"
                            app:font="Normal"
                            android:gravity="center"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#d9d9d9"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#d9d9d9"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center">
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#d9d9d9"
                            />
                        <TextView
                            android:id="@+id/item7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="영등포"
                            android:textSize="22dp"
                            android:textColor="@color/mainPupple"
                            app:font="Normal"
                            android:gravity="center"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#d9d9d9"
                            />
                        <TextView
                            android:id="@+id/item8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="마포"
                            android:textSize="22dp"
                            android:textColor="@color/mainPupple"
                            app:font="Normal"
                            android:gravity="center"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#d9d9d9"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#d9d9d9"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center">
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#d9d9d9"
                            />
                        <TextView
                            android:id="@+id/item9"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="관악"
                            android:textSize="22dp"
                            android:textColor="@color/mainPupple"
                            app:font="Normal"
                            android:gravity="center"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#d9d9d9"
                            />
                        <TextView
                            android:id="@+id/item10"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="22dp"
                            android:textColor="@color/mainPupple"
                            app:font="Normal"
                            android:gravity="center"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#d9d9d9"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#d9d9d9"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:gravity="center">
            <Button
                android:id="@+id/sendLocation"
                android:layout_width="110dp"
                android:layout_height="38dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                app:font="Bold"
                android:background="@drawable/dialog_location_background"
                android:text="검색"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
